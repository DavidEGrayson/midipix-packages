# Maintainer: David Grayson <davidegrayson@gmail.com>

pkgname=$CHOST-psxtypes
pkgver=r6.4d71ed8
pkgrel=1
pkgdesc="Portable type definitions for a free-standing environment"
arch=('any')
url="http://git.midipix.org/$midipix_internal/psxtypes"
license=('unknown')  # psxtypes has no license info
makedepends=()
options=(!strip)
source=("git://midipix.org/$midipix_internal/psxtypes")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/psxtypes"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "${srcdir}/psxtypes"
  make DESTDIR="${pkgdir}/usr/$CHOST" install
}
