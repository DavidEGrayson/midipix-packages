pkgname=ntapi
pkgver=r37.8790747
pkgrel=1
pkgdesc='Windows NT native API core library.'
arch=('midipix64')
url='http://git.midipix.org/cgit.cgi/${midipix_internal}/${pkgname}'
license=('GPLv2' 'GPLv3')
depends=()
if [ -z "$CROSS" ]; then
  makedepends=('psxtypes' 'dalist' 'pemagine')
fi
checkdepends=()
optdepends=()
source=("git://midipix.org/${midipix_internal}/${pkgname}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${pkgname}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  rm -rf "build-${CHOST}"
  mkdir "build-${CHOST}"
  cd "build-${CHOST}"
  "${srcdir}/${pkgname}/configure" --debug --host="${CHOST}"
  make
}

package() {
  cd "${srcdir}/build-${CHOST}"
  make DESTDIR="${pkgdir}" install

  # TODO: install license too
}
