git://midipix.org/$midipix_internal/$pkgname

pkgname=psxtypes
pkgver=r6.4d71ed8
pkgrel=1
pkgdesc='Portable type definitions for a free-standing environment'
arch=('midipix64')
url='http://git.midipix.org/cgit.cgi/${midipix_internal}/${pkgname}'
license=('GPLv2' 'GPLv3')
depends=()
makedepends=()
checkdepends=()
optdepends=()
source=("git://midipix.org/${midipix_internal}/${pkgname}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${pkgname}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "${srcdir}/${pkgname}"
  make DESTDIR="${pkgdir}" install

  # TODO: install license too
}
